{% extends "base.html.twig" %}

{% block body %}
    <style>
        .container {
            max-width: 960px;
        }

    </style>
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Наименование</th>
                <th scope="col">Правильных / Всего </th>
                <th scope="col">Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for test in userTests %}
                <tr>
                    <th scope="row">{{ test.id }}</th>
                    <td>Тестирование от {{ test.occurredAt | date("d.m.Y H:i")}}</td>
                    <td>{{ test.correctAnswersCount }}/{{ test.answers.count }}</td>
                    <td><a class="btn btn-primary" href="/user_tests/{{ test.id }}" role="button">Смотреть тест</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}